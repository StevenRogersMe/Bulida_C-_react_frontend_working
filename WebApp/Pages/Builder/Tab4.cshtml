@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <div style="border-style: solid; border-width: 0.5px; border-color: #7575753b; padding: 10px; width: 1120px; border-radius: 10px">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="CampaignName">CAMPAIGN NAME</label>
                    <input type="text" spellcheck="true" placeholder="Campaign Name" class="form-control form-control-rounded" id="CampaignName">
                </div>
                <div class="form-group col-md-4">
                    <label for="CampaignBudget">Daily Budget</label>
                    <input type="number" placeholder="100" class="form-control form-control-rounded" id="CampaignBudget">
                    <label for="CampaignBudget">Account Id</label>
                    <input type="text" placeholder="Goole account id" class="form-control form-control-rounded" id="AccountId">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="chkAccept">
                        <label class="form-check-label" for="gridCheck">
                            I've read and I accept the Terms of service
                        </label>
                    </div>
                </div>
            </div>
            <button class="btn btn-success btn-block m-1 mb-3" type="button" onclick="PostData('csv')">DOWNLOAD CSV FILE</button>
            <button class="btn btn-success btn-block m-1 mb-3" type="button" onclick="PostData('google')">Post data to google</button>
        </div>
    </div>
</div>